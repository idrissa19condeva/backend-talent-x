# Example environment file for backend production.
# Copy to .env.production and fill values as needed.
# NOTE: Never commit your real .env.*

# --- Required to start server (see server.js) ---
MONGO_URI=mongodb+srv://USER:PASSWORD@HOST/tracknfield-prod
JWT_SECRET=replace-with-a-long-random-string
JWT_REFRESH_SECRET=replace-with-a-long-random-string

# --- Optional server bind ---
# In many hosts (Render/Heroku), PORT is injected automatically.
PORT=4001
HOST=0.0.0.0

# --- Optional JWT tuning ---
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# --- Optional email code settings ---
EMAIL_CODE_TTL_MINUTES=10
EMAIL_CODE_MAX_ATTEMPTS=5
PASSWORD_RESET_CODE_TTL_MINUTES=10
PASSWORD_RESET_CODE_MAX_ATTEMPTS=5
PASSWORD_RESET_CODE_SECRET=

# --- SMTP (optional) ---
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_SECURE=false

# --- Brevo API (recommended over SMTP in production) ---
BREVO_API_KEY=
BREVO_SENDER_EMAIL=
BREVO_SENDER_NAME=Talent-X
BREVO_TIMEOUT_MS=10000

# --- ReadyPlayerMe / avatars ---
RPM_API_KEY=
RPM_API_URL=https://api.readyplayer.me/v2/avatars
RPM_API_BASE=https://api.readyplayer.me
RPM_PARTNER_SUBDOMAIN=
RPM_PARTNER_NAME=

# --- Universal links / app links (recommended for group sharing) ---
# iOS Universal Links requires your Apple Team ID.
# Android App Links requires SHA256 fingerprints (comma-separated).
# These are served at:
# - /.well-known/apple-app-site-association
# - /.well-known/assetlinks.json
APPLE_TEAM_ID=
IOS_BUNDLE_ID=com.talentx.app
ANDROID_PACKAGE_NAME=com.talentx.app
ANDROID_SHA256_CERT_FINGERPRINTS=
