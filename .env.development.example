# Example environment file for backend development.
# Copy to .env.development and fill values as needed.
# NOTE: Never commit your real .env.*

# --- Required to start server (see server.js) ---
MONGO_URI=mongodb://127.0.0.1:27017/tracknfield
JWT_SECRET=replace-with-a-long-random-string
JWT_REFRESH_SECRET=replace-with-a-long-random-string

# --- Optional server bind ---
PORT=4001
HOST=0.0.0.0

# --- Optional JWT tuning ---
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# --- Optional email code settings ---
EMAIL_CODE_TTL_MINUTES=10
EMAIL_CODE_MAX_ATTEMPTS=5
PASSWORD_RESET_CODE_TTL_MINUTES=10
PASSWORD_RESET_CODE_MAX_ATTEMPTS=5
# If not set, falls back to JWT_SECRET (or "tracknfield" as a last resort)
PASSWORD_RESET_CODE_SECRET=

# --- Optional SMTP (only needed to actually send emails) ---
# If not configured, the backend logs OTP/reset codes in the console for debug.
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_SECURE=false

# --- Optional Brevo API (recommended on Render: uses HTTPS/443 instead of SMTP) ---
# If BREVO_API_KEY + BREVO_SENDER_EMAIL are set, the backend sends emails via Brevo API.
BREVO_API_KEY=
BREVO_SENDER_EMAIL=
BREVO_SENDER_NAME=Talent-X
# Request timeout for the API call (ms)
BREVO_TIMEOUT_MS=10000

# --- Optional ReadyPlayerMe / avatars ---
# If RPM_API_KEY is missing, the avatar route will refuse protected calls.
RPM_API_KEY=
RPM_API_URL=https://api.readyplayer.me/v2/avatars
# Used by rpmService.js
RPM_API_BASE=https://api.readyplayer.me
RPM_PARTNER_SUBDOMAIN=
RPM_PARTNER_NAME=

# --- Universal links / app links (optional in dev) ---
# If you want https://<domain>/groups/<id> to open the app automatically,
# configure these and serve the /.well-known files from your public domain.
APPLE_TEAM_ID=
IOS_BUNDLE_ID=com.talentx.app
ANDROID_PACKAGE_NAME=com.talentx.app
ANDROID_SHA256_CERT_FINGERPRINTS=
